{
    "manifest_version": 3,
    "name": "Web Aura Index",
    "version": "0.1.0",
    "description": "Provides an instinctive orientation in the digital space.",
    "permissions": ["activeTab", "scripting", "storage", "action", "contextMenus"],
    "host_permissions": ["*://api.wai.ventureout.cz/*"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/default16.png",
            "32": "icons/default32.png",
            "48": "icons/default48.png",
            "128": "icons/default128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "icons/default16.png",
        "32": "icons/default32.png",
        "48": "icons/default48.png",
        "128": "icons/default128.png"
    }
}
